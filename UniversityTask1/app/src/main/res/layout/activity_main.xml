<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Animals"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="391dp"
            android:layout_height="114dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_card"
            android:orientation="horizontal"
            android:padding="16dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="86dp"
                android:layout_height="81dp"
                android:contentDescription="@string/cd_animal3"
                android:scaleType="centerCrop"
                android:src="@drawable/platypus" />

            <LinearLayout
                android:layout_width="139dp"
                android:layout_height="94dp"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="@string/platypus"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description1"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:text="@string/egg_laying_mammal_endemic"
                    android:textSize="16sp" />

            </LinearLayout>

            <Button
                android:id="@+id/details_button1"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="13dp"
                android:text="@string/details" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="391dp"
            android:layout_height="114dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_card"
            android:orientation="horizontal"
            android:padding="16dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="86dp"
                android:layout_height="80dp"
                android:contentDescription="@string/cd_animal2"
                android:scaleType="centerCrop"
                android:src="@drawable/shark" />

            <LinearLayout
                android:layout_width="139dp"
                android:layout_height="94dp"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="@string/goblin_shark"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description2"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:text="@string/rare_species_of_deep_sea_shark"
                    android:textSize="16sp" />

            </LinearLayout>

            <Button
                android:id="@+id/details_button2"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="13dp"
                android:text="@string/shark_details" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="391dp"
            android:layout_height="114dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_card"
            android:orientation="horizontal"
            android:padding="16dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="86dp"
                android:layout_height="82dp"
                android:contentDescription="@string/cd_animal1"
                android:scaleType="centerCrop"
                android:src="@drawable/capybara" />

            <LinearLayout
                android:layout_width="139dp"
                android:layout_height="94dp"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title3"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="@string/capybara"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description3"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:text="@string/giant_cavy_rodent"
                    android:textSize="16sp" />

            </LinearLayout>

            <Button
                android:id="@+id/details_button3"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/cavy_details" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>